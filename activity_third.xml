<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:local="http://schemas.android.com/tools"
    android:background="#00B4FF"
    tools:context="com.example.piccosoft.designing.ThirdActivity">


    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="1000dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:weightSum="1"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="2dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="120dp">

            <TextView
                android:id="@+id/new_text2"
                android:layout_width="323dp"
                android:layout_height="35dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="28dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="12dp"
                android:layout_toEndOf="@+id/btnGallery"
                android:layout_toRightOf="@+id/btnGallery"
                android:text="Verified Mobile Number"
                android:textColor="#000"
                android:textSize="18dp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="217dp" />

            <TextView
                android:id="@+id/new_text3"
                android:layout_width="323dp"
                android:layout_height="35dp"
                android:layout_alignLeft="@+id/new_text2"
                android:layout_alignStart="@+id/new_text2"
                android:layout_below="@+id/new_text2"
                android:drawableRight="@drawable/write"
                android:text="+91-9629327982"
                android:textColor="#fff"
                android:textSize="25dp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="217dp" />

            <TextView
                android:layout_width="323dp"
                android:layout_height="18dp"
                android:layout_alignLeft="@+id/new_text3"
                android:layout_alignStart="@+id/new_text3"
                android:layout_below="@+id/new_text3"
                android:layout_marginLeft="27dp"
                android:layout_marginStart="27dp"
                android:drawableLeft="@drawable/location"
                android:text="Bengaluru,Indiranagar"
                android:textColor="#fff"
                android:textSize="13dp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="217dp" />

            <ImageView

                android:id="@+id/btnGallery"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="left"
                android:adjustViewBounds="true"
                android:drawablePadding="5dp"
                android:scaleType="fitStart"
                android:singleLine="true"
                android:src="@drawable/pic" />

        </RelativeLayout>


        <EditText

            android:id="@+id/editText1"
            android:layout_width="368dp"
            android:layout_height="76dp"
            android:layout_below="@+id/btnGallery"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:hint="First Name"
            android:textColor="#ff6861"
            android:textColorHint="#ffffff"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="139dp" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="368dp"
            android:layout_height="76dp"
            android:layout_below="@+id/textViewNumberInput1"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:hint="Last Name"
            android:textColor="#ff6861"
            android:textColorHint="#ffffff"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="217dp" />

        <TextView
            android:id="@+id/new_text"
            android:layout_width="368dp"
            android:layout_height="35dp"
            android:layout_below="@+id/textViewNumberInput2"
            android:text="Currently Doing"
            android:textColor="#fff"
            android:textSize="18dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="217dp" />

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="350dp"
            android:layout_height="55dp"
            android:background="#fff"
            android:prompt="@string/spinner_title"
            android:spinnerMode="dialog" />
        <TextView
            android:id="@+id/new_text1"
            android:layout_width="368dp"
            android:layout_height="35dp"
            android:layout_below="@+id/textViewNumberInput2"
            android:text="Current Location"
            android:textColor="#fff"
            android:textSize="18dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="217dp" />


        <fragment
            android:id="@+id/place_autocomplete_fragment"
            android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
            android:layout_width="350dp"
            android:layout_height="55dp"
            tools:layout_editor_absoluteX="17dp"
            tools:layout_editor_absoluteY="386dp" />

        <Button
            android:id="@+id/btnDone"
            android:layout_width="350dp"
            android:layout_height="55dp"
            android:layout_gravity="end"
            android:layout_marginHorizontal="40dp"
            android:background="#086A87"
            android:text="Done"
            android:textColor="@color/white"
            tools:layout_editor_absoluteX="22dp"
            tools:layout_editor_absoluteY="453dp" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
